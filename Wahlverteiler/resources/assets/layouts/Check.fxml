<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane prefHeight="190.0" prefWidth="402.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="95.0" minHeight="10.0" prefHeight="68.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="109.0" minHeight="30.0" prefHeight="57.0" />
            <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
         </rowConstraints>
         <children>
            <VBox prefHeight="82.0" prefWidth="395.0">
               <children>
                  <Label fx:id="l1" focusTraversable="false" prefHeight="17.0" prefWidth="66.0" text="Input File:">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <SplitPane dividerPositions="0.5" focusTraversable="false" prefHeight="19.0" prefWidth="369.0">
                     <items>
                        <Button fx:id="r5" minWidth="60.0" mnemonicParsing="false" onAction="#searchActionInput" text="Search" />
                        <TextField fx:id="t1" editable="false" prefHeight="25.0" prefWidth="289.0" />
                     </items>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </SplitPane>
               </children>
            </VBox>
            <VBox prefHeight="90.0" prefWidth="341.0" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="l11" focusTraversable="false" prefHeight="17.0" prefWidth="66.0" text="Output File:">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="18.0" prefWidth="391.0" spacing="40.0">
                     <children>
                        <RadioButton fx:id="cf1" mnemonicParsing="false" selected="true" text="Create Folder">
                           <toggleGroup>
                              <ToggleGroup fx:id="OutputToggle" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="cf2" mnemonicParsing="false" text="Create File" toggleGroup="$OutputToggle" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <SplitPane dividerPositions="0.5, 0.5, 0.5" focusTraversable="false" prefHeight="16.0" prefWidth="369.0">
                     <items>
                        <Button fx:id="r4" minWidth="60.0" mnemonicParsing="false" onAction="#searchActionOutput" text="Search" />
                        <TextField fx:id="t2" editable="false" minWidth="180.0" prefHeight="25.0" prefWidth="200.0">
                           <tooltip>
                              <Tooltip text="Here you can find the path of your output file" />
                           </tooltip>
                        </TextField>
                        <TextField fx:id="t3" minWidth="60.0" onKeyReleased="#onFileNameChanged" prefHeight="25.0" prefWidth="25.0" text="output">
                           <tooltip>
                              <Tooltip text="This is the path of the output file" />
                           </tooltip>
                        </TextField>
                        <ComboBox fx:id="cb2" minWidth="65.0" onAction="#onFileTypeChanged" prefHeight="25.0" prefWidth="70.0" promptText="File Type">
                           <tooltip>
                              <Tooltip text="Here you select the type of output file" />
                           </tooltip>
                        </ComboBox>
                     </items>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </SplitPane>
               </children>
            </VBox>
         </children>
      </GridPane>
   </center>
   <bottom>
      <StackPane prefHeight="48.0" prefWidth="402.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Finished" />
         </children>
      </StackPane>
   </bottom>
</BorderPane>
